<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!--  Minimal Style  -->
    <Style BasedOn="{StaticResource MaterialDesignScrollBar}" TargetType="{x:Type ScrollBar}">
        <Setter Property="wpf:ScrollBarAssist.ThumbCornerRadius" Value="3" />
        <Setter Property="wpf:ScrollBarAssist.ButtonsVisibility" Value="Collapsed" />
        <Setter Property="wpf:ScrollBarAssist.ThumbWidth" Value="10" />
    </Style>

</ResourceDictionary>